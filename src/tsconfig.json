{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true, // emit .d.ts files
    "target": "es5", // es5 for browsers
    "downlevelIteration": true,
    "outDir": "./../dist",
    "lib": ["es2015", "dom", "scripthost", "es2017"],
    "types": []
  },

  "exclude": ["node_modules", "output"]
}
